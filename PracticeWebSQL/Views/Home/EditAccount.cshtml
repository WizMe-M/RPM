@model PracticeWebSQL.Models.AccountRolesModel
@{
    ViewBag.Title = "Изменение пользователя";
}

<form asp-action="EditAccount" asp-controller="home">
    <input type="hidden" asp-for="Account.ID"/>
    
    <div class="form-group">
        <input type="email" asp-for="Account.Email" placeholder="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="text" asp-for="Account.Login" placeholder="Login" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Account.Password" placeholder="Password" class="form-control"/>
    </div>
    <div>
        <select>
            @foreach (var item in Model.Roles)
            {
                <option>@item.RoleName</option>
            }
        </select>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-default"/>
    </div>
</form>