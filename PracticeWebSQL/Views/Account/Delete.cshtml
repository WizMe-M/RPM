@model PracticeWebSQL.Models.DatabaseIdentities.Account
@{
    ViewBag.Title = "Удаление пользователя";
}
<div>
    <p>Удалить пользователя со следующими данными?</p>
    <dl>
        <dt>ID</dt>
        <dd>
            ~@Html.DisplayFor(model => model.ID)~
        </dd>
        
        <dt>Email</dt>
        <dd>
            ~@Html.DisplayFor(model => model.Email)~
        </dd>
        
        <dt>Логин</dt>
        <dd>
            ~@Html.DisplayFor(model => model.Login)~
        </dd>
        
        <dt>Пароль</dt>
        <dd>
            ~@Html.DisplayFor(model => model.Password)~
        </dd>
        
        <dt>Фамилия</dt>
        <dd>
            ~@Html.DisplayFor(model => model.SecondName)~
        </dd>
        
        <dt>Имя</dt>
        <dd>
            ~@Html.DisplayFor(model => model.FirstName)~
        </dd>
        
        <dt>Отчество</dt>
        <dd>
            ~@Html.DisplayFor(model => model.MiddleName)~
        </dd>
        
        <dt>Дата рождения</dt>
        <dd>
            ~@Model.BirthDate.ToShortDateString()~
        </dd>
    </dl>
    
    <div>
        <form asp-action="Delete" asp-controller="Account" method="post">
            <div class="form-group">
                <input type="submit" value="Удалить!" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>