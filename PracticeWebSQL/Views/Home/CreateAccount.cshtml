@model PracticeWebSQL.Models.AccountRolesModel
@{
    ViewBag.Title = "Добавление пользователя";
}

<form asp-action="CreateAccount" asp-controller="home">
    <div class="form-group">
        <input type="email" asp-for="Account.Email" placeholder="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="text" asp-for="Account.Login" placeholder="Login" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Account.Password" placeholder="****" class="form-control"/>
    </div>
    <div class="form-group">
        <select asp-for="Account.Role">
            @foreach (var item in Model.Roles)
            {
                <option>@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default"/>
    </div>
</form>