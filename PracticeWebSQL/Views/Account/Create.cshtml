@model PracticeWebSQL.Models.Account
@{ 
    ViewBag.Title = "Добавление пользователя";
}

<form asp-action="Create" asp-controller="Account">
    
    <div class="form-group">
        <input type="email" asp-for="Email" placeholder="Электронная почта" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="text" asp-for="Login" placeholder="Логин" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="text" asp-for="Password" placeholder="Пароль" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="text" asp-for="FirstName" placeholder="Имя" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="text" asp-for="SecondName" placeholder="Фамилия" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="text" asp-for="MiddleName" placeholder="Отчество" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="date" asp-for="BirthDate" placeholder="Дата рождения">
    </div>
    
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default"/>
    </div>
</form>