@model PracticeWebSQL.ViewModels.RegistrationAccountModel
@{
    ViewBag.Title = "Регистрация";
}
<form asp-controller="Authorization" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    
    <div>
        <label asp-for="Email"></label><br/>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>
    
    <div>
        <label asp-for="Login"></label><br/>
        <input asp-for="Login"/>
    </div>

    <div>
        <label asp-for="SecondName"></label><br/>
        <input asp-for="SecondName"/>
        <span asp-validation-for="SecondName"></span>
    </div>
    
    <div>
        <label asp-for="FirstName"></label><br/>
        <input asp-for="FirstName"/>
        <span asp-validation-for="FirstName"></span>
    </div>

    <div>
        <label asp-for="MiddleName"></label><br/>
        <input asp-for="MiddleName"/>
    </div>

    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="ConfirmedPassword"></label><br />
        <input asp-for="ConfirmedPassword" />
        <span asp-validation-for="ConfirmedPassword"></span>
    </div>
    
    <div>
        <label asp-for="BirthDate"></label><br />
        <input asp-for="BirthDate" />
        <span asp-validation-for="BirthDate"></span>
    </div>

    <div>
        <input type="submit" value="Зарегистрироваться" />
    </div>
</form>